<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:mask="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"


        android:background="@color/whitish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".SecondActivity"
>

    <!--Toolbar-->
    <android.support.v7.widget.Toolbar
            android:id="@+id/mainToolbar"
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />
    <!--Toolbar-->

    <!--Cuts-->
    <EditText
            android:id="@+id/etCutsInfo"

            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:hint="Постовщик:"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:enabled="false"
            android:focusable="false"
            android:textSize="14sp"
            android:textColorHint="@color/black"


            android:layout_marginTop="16dp"

            mask:layout_constraintTop_toBottomOf="@id/mainToolbar"
    />

    <EditText
            android:id="@+id/etCutsInfo2"

            android:hint="Аршановский"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:enabled="false"
            android:textSize="14sp"
            android:focusable="false"

            android:layout_marginTop="16dp"

            mask:layout_constraintTop_toBottomOf="@id/mainToolbar"
    />
    <!--Cuts-->

    <!--Firms-->
    <EditText
            android:id="@+id/etCoalInfo"

            android:hint="Марка:"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:enabled="false"
            android:focusable="false"
            android:textColorHint="@color/black"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="14sp"
            android:layout_marginTop="16dp"

            mask:layout_constraintTop_toBottomOf="@id/etCutsInfo"
    />

    <EditText
            android:id="@+id/etCoalInfo2"

            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:enabled="false"
            android:focusable="false"
            android:hint="ДО 25-50"
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"

            mask:layout_constraintTop_toBottomOf="@id/etCutsInfo"
    />
    <!--Firms-->

    <!--Weight-->
    <EditText
            android:id="@+id/etWeight"

            android:hint="Масса:"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:enabled="false"
            android:focusable="false"
            android:textColorHint="@color/black"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="14sp"
            android:layout_marginTop="16dp"

            mask:layout_constraintTop_toBottomOf="@id/etPriceInfo"
    />

    <EditText
            android:id="@+id/etWeight2"

            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:enabled="false"
            android:focusable="false"
            android:hint="40 тонн"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="14sp"
            android:layout_marginTop="16dp"

            mask:layout_constraintTop_toBottomOf="@id/etPriceInfo"
    />
    <!--Weight-->

    <!--Address-->
    <EditText
            android:id="@+id/etAddress"

            android:hint="Адресс:"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="50dp"
            android:enabled="false"
            android:focusable="false"
            android:textColorHint="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="16dp"

            mask:layout_constraintTop_toBottomOf="@id/etWeight"
    />

    <EditText
            android:id="@+id/etAddress2"

            android:hint="Ул. Пушкина дом Колотушкинаб кв 77"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:enabled="false"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:focusable="false"
            android:textSize="14sp"

            android:layout_marginTop="16dp"

            mask:layout_constraintTop_toBottomOf="@id/etWeight"
    />
    <!--Address-->

    <!--Distance-->
    <EditText
            android:id="@+id/etDistance"

            android:hint="Расстояние:"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="50dp"
            android:enabled="false"
            android:focusable="false"
            android:textColorHint="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="16dp"

            mask:layout_constraintTop_toBottomOf="@id/etAddress"
    />

    <EditText
            android:id="@+id/etDistance2"

            android:hint="53.4 km"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:enabled="false"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:focusable="false"
            android:textSize="14sp"

            android:layout_marginTop="16dp"

            mask:layout_constraintTop_toBottomOf="@id/etAddress"
    />
    <!--Distance-->


    <!--Phone Number-->
    <EditText
            android:id="@+id/etPhoneNumber2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:enabled="false"
            android:focusable="false"
            android:gravity="left"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Телефон:"
            android:textColor="@color/red"
            android:textColorHint="@color/black"
            android:layout_marginTop="16dp"
            android:paddingBottom="20dp"

            mask:layout_constraintTop_toBottomOf="@id/etDistance"

    />

    <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="14sp"
            android:gravity="right"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:paddingBottom="20dp"
            android:inputType="phone"
            android:digits="0123456789"

            mask:layout_constraintTop_toBottomOf="@id/etDistance"

    />
    <!--Phone Number-->

    <!--Price-->
    <EditText
            android:id="@+id/etPriceInfo"

            android:hint="Цена за тонну:"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="50dp"
            android:enabled="false"
            android:focusable="false"
            android:textColorHint="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="16dp"

            mask:layout_constraintTop_toBottomOf="@id/etCoalInfo"
    />

    <EditText
            android:id="@+id/etPriceInfo2"

            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:enabled="false"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:focusable="false"
            android:textSize="14sp"

            android:layout_marginTop="16dp"

            mask:layout_constraintTop_toBottomOf="@id/etCoalInfo"
    />
    <!--Price-->

    <!--Bottom App Bar-->
    <android.support.design.widget.CoordinatorLayout
            android:id="@+id/coordinator"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="5dp"
            tools:layout_editor_absoluteX="0dp">

        <android.support.design.bottomappbar.BottomAppBar
                android:id="@+id/babBar"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_height="56dp"
                android:backgroundTint="@color/colorPrimary"
                app:fabCradleRoundedCornerRadius="20dp"


        />

        <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatBTN"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_done"
                android:onClick="Done"
                app:fabSize="normal"
                app:layout_anchor="@id/babBar"
                android:backgroundTint="@color/lightBlue"


        />

    </android.support.design.widget.CoordinatorLayout>
    <!--Bottom App Bar-->


</android.support.constraint.ConstraintLayout>