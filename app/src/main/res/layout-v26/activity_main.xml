<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whitish"

        tools:context=".presentation.ui.MainActivity">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/tvFirmSelectHelper"
              android:text="@string/firmSelect"
              android:textColor="@color/black"
              android:textSize="14sp"
              android:layout_marginStart="16dp"
              app:layout_constraintTop_toTopOf="@id/firmSpiner"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintBottom_toBottomOf="@id/firmSpiner"
    />

    <Spinner
            android:id="@+id/firmSpiner"
            android:layout_width="match_parent"
            android:textAlignment="viewEnd"
            android:layout_height="60dp"
            android:entries="@array/firms"
            android:tooltipText="@string/firmSpinnerTooltip"
            style="@style/spinner_style"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <TextView
            android:id="@+id/tvCoalSelectHelper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coalSelect"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/coalSpinner"
            app:layout_constraintTop_toTopOf="@id/coalSpinner"
            app:layout_constraintBottom_toBottomOf="@id/coalSpinner"
    />


    <Spinner
            android:id="@+id/coalSpinner"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textAlignment="viewEnd"
            android:entries="@array/Arshanovsky"
            android:tooltipText="Здесь вы можете выбрать марку угля"
            style="@style/spinner_style"
            app:layout_constraintTop_toBottomOf="@id/firmSpiner"
            app:layout_constraintRight_toRightOf="@id/firmSpiner"
    />

    <EditText
            android:id="@+id/etCoast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:focusable="false"
            android:enabled="false"
            android:gravity="right"
            android:textColorHighlight="@color/black"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:shadowColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/coalSpinner"
    />

    <EditText
            android:hint="Цена:"
            android:id="@+id/etCoast2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:focusable="false"
            android:enabled="false"
            android:layout_marginLeft="16dp"
            android:textColorHint="@color/black"
            android:layout_marginRight="16dp"
            android:gravity="left"
            android:textSize="14sp"
            android:textColorHighlight="@color/black"
            android:textColor="@color/black"
            android:shadowColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/coalSpinner"
    />

    <TextView
            android:id="@+id/tvWeightHelper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="@string/addWeigth"

            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="@id/tvFirmSelectHelper"
            app:layout_constraintTop_toBottomOf="@id/etCoast"

    />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/etWeigthHelper"
            android:id="@+id/etWeight"
            android:textSize="14sp"
            android:maxLength="2"
            android:gravity="center"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:digits="0123456789"


            app:layout_constraintEnd_toEndOf="@id/etCoast"
            app:layout_constraintTop_toBottomOf="@id/etCoast"
    />


    <EditText
            android:textSize="14sp"
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/whitish"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:typeface="monospace"
            android:layout_marginRight="16dp"
            android:elevation="10dp"
            android:hint="@string/searchBar"
            android:imeOptions="actionSearch"
            android:inputType="textMultiLine"
            android:paddingLeft="56dp"

            app:layout_constraintTop_toBottomOf="@id/tvWeightHelper"
    />

    <ScrollView
            android:id="@+id/scroll"
            app:layout_constraintTop_toBottomOf="@id/searchBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="20dp"
    >
        <ListView
                android:elevation="20dp"
                android:background="@color/white"
                android:id="@+id/suggest_result"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintTop_toBottomOf="@id/searchBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
    </ScrollView>

    <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_second_search"
            app:layout_constraintLeft_toLeftOf="@id/searchBar"
            app:layout_constraintTop_toTopOf="@id/searchBar"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="@id/searchBar"
            android:layout_marginLeft="16dp"

    />


    <TextView
            android:id="@+id/OR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/OR"
            android:textAllCaps="true"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchBar"
            app:layout_constraintBottom_toTopOf="@id/btnMap"
    />

    <Button
            android:id="@+id/btnMap"
            android:text="@string/btnMapHint"
            android:layout_marginTop="16dp"
            android:onClick="goMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/colorPrimary"
            android:typeface="monospace"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/OR"

    />


    <EditText
            android:layout_width="match_parent"
            android:id="@+id/etDistance"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="14sp"
            android:gravity="right"
            android:focusable="false"
            android:enabled="false"
            android:textColorHighlight="@color/black"
            android:textColor="@color/black"
            android:shadowColor="@color/black"

            app:layout_constraintTop_toBottomOf="@id/btnMap"
    />

    <EditText android:layout_width="match_parent"
              android:id="@+id/etDistance2"
              android:layout_height="wrap_content"
              android:layout_marginTop="16dp"
              android:focusable="false"
              android:enabled="false"
              android:text="Растояние:"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
              android:gravity="left"
              android:textSize="14sp"
              app:layout_goneMarginTop="16dp"
              android:textColorHighlight="@color/black"
              android:textColor="@color/black"
              android:shadowColor="@color/black"

              app:layout_constraintTop_toBottomOf="@id/btnMap"
    />

    <EditText
            android:id="@+id/etCoastForDelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            android:focusable="false"
            android:enabled="false"
            android:layout_marginRight="16dp"
            android:gravity="right"
            android:textColorHighlight="@color/black"
            android:textColor="@color/black"
            android:shadowColor="@color/black"

            app:layout_constraintTop_toBottomOf="@id/etDistance"
    />

    <EditText
            android:id="@+id/etCoastForDelivery2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Стоимость доставки:"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="left"
            android:textColorHighlight="@color/black"
            android:textColor="@color/black"
            android:focusable="false"
            android:enabled="false"
            android:shadowColor="@color/black"
            android:textSize="14sp"

            app:layout_constraintTop_toBottomOf="@id/etDistance"
    />


    <EditText
            android:id="@+id/etCoastFor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="right"
            android:textColorHighlight="@color/black"
            android:textSize="14sp"
            android:focusable="false"
            android:enabled="false"
            android:textColor="@color/black"
            android:shadowColor="@color/black"

            app:layout_constraintTop_toBottomOf="@id/etCoastForDelivery"
    />

    <EditText
            android:id="@+id/etCoastFor2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Общая сумма к оплате:"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="14sp"
            android:gravity="start"
            android:focusable="false"
            android:enabled="false"
            android:textColorHighlight="@color/black"
            android:textColor="@color/black"
            android:shadowColor="@color/black"

            app:layout_constraintTop_toBottomOf="@id/etCoastForDelivery"
    />

    <android.support.design.widget.CoordinatorLayout

            android:layout_width="match_parent"
            android:id="@+id/coordinator"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="5dp"
            tools:layout_editor_absoluteX="0dp">

        <android.support.design.bottomappbar.BottomAppBar
                android:id="@+id/babBar"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_height="56dp"
                android:backgroundTint="@color/colorPrimary"
                app:fabCradleRoundedCornerRadius="20dp"


        />

        <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatBTN"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_next"
                android:onClick="goNextActivity"
                android:backgroundTint="@color/lightBlue"
                app:fabSize="normal"
                app:layout_anchor="@id/babBar"


        />
    </android.support.design.widget.CoordinatorLayout>

</android.support.constraint.ConstraintLayout>